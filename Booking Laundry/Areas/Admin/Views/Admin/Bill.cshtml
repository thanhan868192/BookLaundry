@model IEnumerable<Booking_Laundry.Models.Dto.BillDto>

@{
    ViewBag.Title = "Bill";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Bill</h2>

<p>
    @Html.ActionLink("Create New", "ViewCreateBill")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.idCode)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.dateCreate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.totalExpenses)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.status)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.idCode)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.dateCreate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.totalExpenses)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.status)
        </td>
        <td>
            @Html.ActionLink("Details", "DetailBill", new { id=item.id }) 
        </td>
    </tr>
}

</table>
