@model IEnumerable<Booking_Laundry.Models.Dto.DeliveryDto>
@{
    ViewBag.Title = "Delivery";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Delivery</h2>

@using (Html.BeginForm("CreateDeli","Admin",FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>DeliveryDto</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <label class="control-label col-md-2">Name Delivery</label>
            <div class="col-md-10">
                <input class="form-control" type="text" name="name" value="" required />
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.name)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.name)
            </td>
            <td>
                @Html.ActionLink("Edit", "EditDeli", new { id = item.id }) |
                @Html.ActionLink("Delete", "DeleteDeli", new { id = item.id })
            </td>
        </tr>
    }

</table>
